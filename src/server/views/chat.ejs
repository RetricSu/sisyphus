<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sisyphus AI Agent Brain</title>
</head>
<body>
    <style>
        .message{
            margin:10px 0;
        }
        .message-content {
            white-space: pre-wrap;
            word-wrap: break-word; 
            margin: 10px 10px;
        }
        .time{
            font-size: smaller;
            color: gray;
        }
        header {
            text-align: center;
            padding: 1em;
            background-color: #f0f0f0;
        }
        .message-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 1em;
        }
        .toolResult {
            max-width: 800px;
            margin-left: 20px;
            margin-bottom: 40px;
            padding: 2em; 
            border: 1px dashed gray;
        }
        .collapsed {
            display: none;
        }
        .collapsible-content {
            cursor: pointer;
            padding: 1em;
        }
    </style>
    <header><h1>Sisyphus AI Agent Brain</h1></header>
    <div class="message-container">
    <ul>
        <% messages.forEach(message => { %>
            <% if (message.role == 'tool') { %>
            <div class="message">
                <div class="collapsible-content" onclick="toggleContent(this)"> >>> Expand tool result</div>
                <div class="toolResult collapsed"><%= message.content %></div>
            </div>
            <% } else { %>
            <div class="message">
                <div><strong><%= message.role.toUpperCase() %>:</strong></div>
                <div  class="message-content"><%= message.content %></div>
                <div class="time"><%= new Date(message.created_at * 1000).toLocaleString('zh-CN') %></div>
            </div>
        <% }}) %>
    </ul>
    <script>
        function toggleContent(element) {
            console.log("dddd");
            const content = element.nextElementSibling;
            content.classList.toggle('collapsed');
        }
    </script>
</body>
</html>
